<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#00BCD4"
    android:layout_height="match_parent"
    tools:context=".manageData">
    <TextView
        android:layout_width="match_parent"
        android:text="Your Total Data"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:textSize="30sp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/displayEditId"
            android:layout_width="250dp"
            android:hint="Inter Key 404"
            android:inputType="number"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/displayButtonId"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="Display"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/DeleteEditId"
            android:layout_width="250dp"
            android:hint=" User Name"
            android:inputType="text"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/DeleteButtonId"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:text="Delete"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/displayTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:background="#FFFFFF" />

    </ScrollView>




</LinearLayout>